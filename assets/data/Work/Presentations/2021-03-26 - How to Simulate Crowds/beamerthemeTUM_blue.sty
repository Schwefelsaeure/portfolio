\setbeamercovered{transparent}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Configure fonts
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% See Beamer Guide p. 201-202 and fntguide package (https://ctan.org/pkg/fntguide)
\setbeamerfont{title}{series=\bfseries}
\setbeamerfont{subtitle}{series=\mdseries}
\setbeamerfont{author}{series=\bfseries}
\setbeamerfont{institute}{size=\footnotesize,series=\mdseries}
\setbeamerfont{date}{size=\footnotesize,series=\mdseries}
\setbeamerfont{frametitle}{size=\fontsize{11}{13},series=\bfseries}

\setbeamerfont{body text}{size=\normalsize}
\setbeamerfont{block title}{series=\bfseries}
\setbeamerfont{block body}{parent={body text}}
\setbeamerfont{caption}{size=\tiny} 

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Configure title page, header, footer and main content area
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\defbeamertemplate*{title page}{customized}[1][]{%
  \hfill\insertlogo\par
  \vspace{\baselineskip}
  \usebeamerfont{title}\inserttitle\par
  \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
  \bigskip
  \usebeamerfont{author}\insertauthor\par
  \usebeamerfont{institute}\insertinstitute\par
  \usebeamerfont{date}\insertdate\par
  \vspace{2\baselineskip}
  \hfill\includegraphics[width=7cm]{\inserttitlegraphic}
}

\setbeamertemplate{headline}{}

\setbeamertemplate{frametitle}{
	\begin{beamercolorbox}[wd=85mm,leftskip=0mm]{frametitle}
		\usebeamerfont*{frametitle}
		\insertframetitle\hfill\parbox{5mm}{\vspace{-2mm}\insertlogo}\hspace{-20mm}
	\end{beamercolorbox}
	\vspace{-3mm}\textcolor{TUMBlau}{\noindent\rule{\textwidth}{0.4px}}
}

\defbeamertemplate*{footline}{infolines theme}{%
    \hspace*{\Gm@lmargin}%
    \vspace{2mm}%
	\insertnavigation{0.8\paperwidth}\hfill%
    \tiny\insertframenumber{}/\inserttotalframenumber%
}

\setbeamertemplate{sidebar right}{\vfill\vskip2pt\llap{\usebeamertemplate***{navigation symbols}\hskip1mm}\vskip2pt}
